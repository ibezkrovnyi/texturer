namespace Game {

	// Statistics:
	// - textures: {{textures.length}}
	// - textureMaps: {{maps.length}}

	const maps = [{{#each maps}}
		{
			url        : "{{#if base64}}{{base64}}{{else}}{{url}}{{/if}}",
			width      : {{width}},
			height     : {{height}},
			repeatX    : {{repeat-x}},
			repeatY    : {{repeat-y}}
		}{{#unless is-last-item}}, {{/unless}}{{/each}}
	];

	appDesc.texturePool = { {{#each textures}}
		"{{id}}" : {
			map        : maps[{{map-index}}],
			x          : {{x}},
			y          : {{y}},
			width      : {{real-width}},
			height     : {{real-height}},
			opaque     : {{opaque}},
			trim       : { left : {{trim.left}}, right : {{trim.right}}, top : {{trim.top}}, bottom : {{trim.bottom}} }
		}{{#unless is-last-item}}, {{/unless}}{{/each}}
	};
}
