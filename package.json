{
  "name": "texturer",
  "version": "0.2.2",
  "description": "Texture Map Generator in pure JavaScript (TypeScript/NodeJS/Multithreading)",
  "author": "Igor Bezkrovny",
  "contributors": [],
  "homepage": "https://github.com/igor-bezkrovny/texturer",
  "keywords": [],
  "engines": {
    "node": "0.12.x"
  },
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibezkrovnyi/texturer"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "webpack-cli --display-modules",
    "build1": "tsc -p src/texturer & tsc -p src/workers",
    "lint": "tslint --format verbose --config tslint.json --project ./src/workers/tsconfig.json && tslint --format verbose --config tslint.json --project ./src/texturer/tsconfig.json",
    "lint-fix": "tslint --fix --format verbose --config tslint.json --project ./src/workers/tsconfig.json && tslint --fix --format verbose --config tslint.json --project ./src/texturer/tsconfig.json",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/ibezkrovnyi/texturer/issues"
  },
  "dependencies": {
    "handlebars": "4.0.11"
  },
  "preferGlobal": true,
  "bin": {
    "texturer": "./bin/texturer"
  },
  "license": "MIT",
  "devDependencies": {
    "@ibezkrovnyi/tslint-rules": "0.0.3",
    "@types/fs-extra": "5.0.1",
    "@types/handlebars": "4.0.29",
    "@types/node": "9.4.6",
    "ajv": "6.2.0",
    "bmp-js": "ibezkrovnyi/bmp-js",
    "jpeg-js": "0.0.4",
    "fs-extra": "5.0.0",
    "jest": "22.4.2",
    "jsonc-parser": "1.0.1",
    "rimraf": "latest",
    "ts-jest": "22.4.0",
    "ts-loader": "4.0.0",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.7.0",
    "tslint-consistent-codestyle": "1.11.1",
    "tslint-language-service": "0.9.8",
    "typescript": "2.7.2",
    "webpack": "4.0.1",
    "webpack-cli": "2.0.9",
    "worker-farm": "1.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "tsConfigFile": "./src/texturer/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
